#!/usr/bin/with-contenv bash

# create folders
mkdir -p \
	/var/log/radarrannounced

# install app
 [[ ! -d "/config/temp/.git" ]] && \
	git clone https://github.com/stealthgyro/radarrAnnounced /config/temp
	cp -r /config/temp/* /config
	rm -rf /config/temp
	pip3 install -r /config/requirements.txt
	if [ ! -f /config/settings.cfg ]; then
		cp /config/settings.cfg.default /config/settings.cfg
	fi
	# if [ ! -d /config/trackers ]; then
	# 	cp -r /app/radarrannounced/trackers /config/trackers
	# fi
	# if [ ! -d /config/templates ]; then
	# 	cp -r /app/radarrannounced/templates /config/templates
	# fi

# permissions
chown -R abc:abc \
	/config

chmod 777 \
	/var/log/radarrannounced
